<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="HeaderComponent" pageWidth="595" pageHeight="100" columnWidth="555" leftMargin="0"
    rightMargin="0" topMargin="0" bottomMargin="0" uuid="999e8888-e77b-66d3-c456-555444333222">

    <!-- Parameters -->
    <parameter name="createdBy" class="java.lang.String"/>
    <parameter name="reportDate" class="java.util.Date"/>

    <title>
        <band height="100">
            <!-- Header Background -->
            <rectangle>
                <reportElement x="0" y="0" width="555" height="40" backcolor="#2C3E50" mode="Opaque"/>
            </rectangle>

            <!-- Static Report Title -->
            <staticText>
                <reportElement x="0" y="5" width="555" height="30" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA["TRES REPORT"]]></text>
            </staticText>

            <!-- Report Date -->
            <textField>
                <reportElement x="0" y="50" width="300" height="20"/>
                <textElement>
                    <font size="10" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Report Date: " + new java.text.SimpleDateFormat("yyyy-MM-dd").format($P{reportDate})]]></textFieldExpression>
            </textField>

            <!-- Created By -->
            <textField>
                <reportElement x="355" y="50" width="200" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Created by: " + $P{createdBy}]]></textFieldExpression>
            </textField>
        </band>
    </title>
</jasperReport>
